{{#extends 'layouts/main'}}
{{#content 'body'}}
  <h1>Agregar Producto</h1>
  <form method="POST" action="/add-product">
    <label for="id">Título:</label>
    <input type="text" id="id" name="id" required>
    <label for="title">Título:</label>
    <input type="text" id="title" name="title" required>
    <label for="description">Descripción:</label>
    <input type="text" id="description" name="description" required>
    <label for="code">Título:</label>
    <input type="text" id="code" name="code" required>
    <label for="price">Título:</label>
    <input type="number" id="price" name="price" required>
    <label for="status">Título:</label>
    <input type="checkbox" id="status" name="status" checked>
    <label for="stock">Título:</label>
    <input type="number" id="stock" name="stock" required>
    <label for="category">Título:</label>
    <input type="text" id="category" name="category" required>
    <label for="thumbnails">Título:</label>
    <input type="text" id="thumbnails" name="thumbnails">
    <button type="submit">Agregar Producto</button>
  </form>
{{/content}}
